<div id="all-events">
	<div class="upper-event-list">
		<div class="container">
			<div class="row">

				<div id="number-of-playdates" class="col-md-6 text-center" >
					<h2><%= pluralize @events.size, "Upcoming Playdate" %> </h2>
					<p><%= link_to "Create New Playdate", new_event_path, 'data-no-turbolink' => true %><p>
				</div> <!--end number-of-playdates -->

				<div class="col-md-6 text-center" >
					<h2> Playdate Locations </h2>
				</div>

			</div> <!--end first row -->
		</div> <!--end first container -->
	</div> <!-- end upper-event-list -->


	<div class="right-of-event-list">
		<div class="container">
			<div class="row">

				<div id="inner-event-list" class="col-md-6" style="overflow: auto; height:400px">
					<% @events.each do |event| %>
						<article>
							<header>
								<h2> <%= link_to(event.name, event, 'data-no-turbolink' => true) %> </h2>
							</header>
							<p> <%= truncate(event.description, length: 30, separator: ' ') %> </p>
							
							<table>
								<tr>
									<th> When: </th>
									<td> <%= event.starts_at %> </td>
								</tr>
								<tr>
									<th> Where: </th>
									<td> <%= event.location %> </td>
								</tr>
							</table>
						</article>
					<% end %>
				</div> <!--end inner-event-list -->

				<div id="map-container-index" class="col-md-6">
					<div id="map-canvas"></div>
				</div> <!--end map-container-index -->

			</div> <!--end second row -->
		</div>  <!--end second container -->
	</div> <!-- end of right-of-event-list -->
</div> <!--end all-events -->





