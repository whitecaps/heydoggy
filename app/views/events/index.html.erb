    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.2/js/bootstrap.min.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script>  
      function init_map() {
    var myLocation = new google.maps.LatLng(49.2496600,-123.1193400);
      
        var mapOptions = {
          center: myLocation,
          zoom: 11,
        };
    
    var marker = new google.maps.Marker({
      position: myLocation,
      title:"Off Leash Parks"});
      
    var map = new google.maps.Map(document.getElementById("map-container-index"), mapOptions);
    
   	 marker.setMap(map); 

      }

      google.maps.event.addDomListener(window, 'load', init_map);






    </script>
