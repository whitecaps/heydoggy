<%= form_for(@event) do |f| %>
	<%= render 'shared/errors', object: @event %>
	<fieldset>
		<p>
			<%= f.label :name, "Playdate Event Name" %>
			<%= f.text_field :name, maxlength: 50, autofocus: true %>
			<br>
		</p>
		<p>
			<%= f.label :description, "Description (exact location, special instructions, etc.)" %>
			<%= f.text_area :description, cols: 60, rows: 5, maxlength: 800 %>
			<br>
		</p>
		<p>
			<%= f.label :starts_at %>
			<%= f.datetime_select :starts_at, default: 7.hours.ago %>
			<br>
		</p>
		<p>
			<%= f.label :ends_at %>
			<%= f.datetime_select :ends_at, default: 6.hours.ago %>
			<br>
		</p>
			<%= f.hidden_field :location%>
			<%= f.hidden_field :lat%>
			<%= f.hidden_field :long %>
		<p>
			<% if @event.new_record? %>
				<%= f.submit "Create Playdate", :class => "event-submit-button"%>
			<% else %>
				<%= f.submit "Update Playdate", :class => "event-submit-button"%>
			<% end %>
			&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", event_path(@event), 'data-no-turbolink' => true %>
		</p>
	</fieldset>
<% end %>
