<%= form_for(@event) do |f| %>
	<%= render 'shared/errors', object: @event %>
	<fieldset>
		<p>
			<%= f.label :name, "Playdate Event Name" %>
			<%= f.text_field :name, autofocus: true %>
			<br>
		</p>
		<p>
			<%= f.label :description %>
			<%= f.text_area :description, cols: 40, rows: 7 %>
			<br>
		</p>
		<p>
			<%= f.label :starts_at %>
			<%= f.datetime_select :starts_at, default: 7.hours.ago %>
			<br>
		</p>
		<p>
			<%= f.label :ends_at %>
			<%= f.datetime_select :ends_at, default: 6.hours.ago %>
			<br>
		</p>
		<p>
			<%= f.label :location %>
			<%= f.text_field :location%>
			<br>
		</p>
		<p>
			<%= f.submit %> |
			<%= link_to "Cancel", events_path, 'data-no-turbolink' => true %>
		</p>
	</fieldset>
<% end %>