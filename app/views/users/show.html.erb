<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <%= image_for(@user) %>
    <h2><%= mail_to(@user.email) %></h2>
    <h3>Member Since</h3>
		<p>
  			<%= @user.created_at.strftime("%B %Y") %>
		</p>

    <% if @registrations.any? %>
      <h3> Registrations </h3>
      <ul id="registration">
        <% @registrations.each do |registration| %>
         <li>
          <%= link_to registration.event.name, registration.event %>
          <span class="date">(<%= time_ago_in_words(registration.created_at) %> ago)</span>
        </li>
        <% end %>
      </ul>
    <% end %>


    <% if @events_created %>
    <!-- problem somewhere below -->
      <h3> Playdates Organized </h3>
      <ul id="playdates-organized">
        <h2> TEST </h2>
      </ul>
    <!-- problem somewhere above -->
    <% end %>



  </header>
    <% if current_user?(@user) %>
  	<%= link_to "Edit Account", edit_user_path(@user), class: 'button'%>
 	  <%= link_to 'Delete Account', @user, 
                method: :delete, 
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
    <% end %>
</article>